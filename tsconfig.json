{
    "compilerOptions": {
        "lib": ["ES2020"],
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",
        "rootDir":"./src",
        "outDir":"./dist",
        "baseUrl": ".",
        "paths":{
            "*":[ "src/*" ],
            "mdw/*":[ "src/mdw/*" ],
            "helpers/*":[ "src/helpers/*" ],
            "controllers/*":[ "src/controllers/*" ],
        }
    },    
    "include": [
        "./src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}

